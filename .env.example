# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/bisnesmedia_integration

# Project Configuration
PROJECT_NAME="bisnesmedia Integration Hub"

# 1C API Configuration
API_1C_URL=http://localhost:8080/hs/integrationapi
API_1C_USERNAME=integration_user
API_1C_PASSWORD=secure_password

# МойСклад API Configuration
MOYSKLAD_API_URL=https://api.moysklad.ru/api/remap/1.2
MOYSKLAD_TOKEN=your_moysklad_token_here
MOYSKLAD_ORG_UUID=organization_uuid_here
MOYSKLAD_AGENT_UUID=counterparty_uuid_here

# Logging Configuration
LOG_LEVEL=INFO            # DEBUG/INFO/WARN/ERROR
LOG_FORMAT=json           # json|text
LOG_REDACT_KEYS=password,Authorization,apiKey,token
LOG_BODY_MAX=2000         # макс. длина логируемых тел
LOG_SAMPLE_RATE=1.0       # 0..1 (сэмплирование логов тел; 1.0 = всегда)
LOG_DB_WRITE=true         # писать ли события в integration_logs

# Data Processing Configuration
STRICT_IDS=false          # true для отбрасывания элементов без UUID
ONEC_LOSSY_NORMALIZE=true # true для толерантной нормализации 1С ответов

# Background Jobs Configuration
RUN_MIGRATIONS_ON_STARTUP=true